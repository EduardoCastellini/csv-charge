{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",                                 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                        
    "skipLibCheck": true,
    "incremental": true,
    "outDir": "dist",
    "rootDirs": ["src", "tests"],
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*","tests/**/*"]
}
